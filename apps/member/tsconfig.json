{
  "extends": "@clab/config/tsconfig.react.json",
  "compilerOptions": {
    "paths": {
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@pages/*": ["./src/pages/*"],
      "@router/*": ["./src/router/*"],
      "@store/*": ["./src/store/*"],
      "@style/*": ["./src/style/*"],
      "@type/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": false
  },
  "include": ["src", "member.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
